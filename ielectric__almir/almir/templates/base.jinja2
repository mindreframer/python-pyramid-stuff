{% import 'templates/macros.jinja2' as macros %}
<!DOCTYPE html>
<html>
<head>
  <title>Almir - bacula web administrator tool</title>
  <meta name="keywords" content="python web application" />
  <meta name="description" content="pyramid web application" />
  <link rel="shortcut icon" href="{{ request.static_url('almir:static/images/favicon.ico') }}" />

  <!-- basic javascript -->
  <script src="{{ request.static_url('almir:static/js/jquery-1.7.1.min.js') }}"></script>
  <script src="{{ request.static_url('almir:static/js/html5.js') }}"></script>

  <!-- bootstrap -->
  <link href="{{ request.static_url('almir:static/bootstrap/bootstrap.min.css') }}" rel="stylesheet" type="text/css" media="screen" />
  <script src="{{ request.static_url('almir:static/bootstrap/bootstrap.min.js') }}"></script>

  <!-- datatables -->
  <link href="{{ request.static_url('almir:static/datatables/bootstrap.css') }}" rel="stylesheet" type="text/css" />
  <script src="{{ request.static_url('almir:static/datatables/jquery.dataTables.min.js') }}"></script>
  <script src="{{ request.static_url('almir:static/datatables/TableTools.min.js') }}"></script>
  <script src="{{ request.static_url('almir:static/datatables/bootstrap.js') }}"></script>
  <script src="{{ request.static_url('almir:static/datatables/type_filesize.js') }}"></script>
  <script src="{{ request.static_url('almir:static/datatables/type_hidden_numeric_data.js') }}"></script>

  <!-- deform -->
  <link rel="stylesheet" href="{{ request.static_url('deform:static/css/form.css') }}" type="text/css" />
  <script src="{{ request.static_url('deform:static/scripts/deform.js') }}"></script>
  <script src="{{ request.static_url('deform:static/scripts/jquery.form.js') }}"></script>

  <!-- deform_bootstrap -->
  <script src="{{ request.static_url('deform_bootstrap:static/bootstrap-datepicker.js') }}"></script>
  <link href="{{ request.static_url('deform_bootstrap:static/bootstrap-datepicker.css') }}" rel="stylesheet" type="text/css" />
  <script src="{{ request.static_url('deform_bootstrap:static/jquery_chosen/chosen.jquery.js') }}"></script>
  <link href="{{ request.static_url('deform_bootstrap:static/jquery_chosen/chosen.css') }}" rel="stylesheet" type="text/css" />

  <!-- init for main -->
  <script type="text/javascript">
   var tabletools_swf = "{{ request.static_url('almir:static/datatables/copy_cvs_xls_pdf.swf') }}",
       datatables_route = "{{ request.route_url('datatables') }}";
  </script>

  <!-- main -->
  <link rel="stylesheet/less" href="{{ request.static_url('almir:static/css/main.less') }}" type="text/css" media="screen" />
  <script src="{{ request.static_url('almir:static/js/less-1.1.5.min.js') }}"></script>
  <script src="{{ request.static_url('almir:static/js/main.js') }}"></script>
  {% block extrahead %}
  {% endblock  %}
</head>
<body>
  <div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container">
       <a class="brand" href="{{ request.route_url('about') }}">Almir</a>
       {% for item in navigation_tree %}
        <ul class="nav">
         <li class="{% if current_url == item.url %}active{% endif %}"><a href="{{ item.url }}">{{  item.name  }}</a></li>
        </ul>
       {% endfor %}
        <!-- TODO: v0.3
        <form action="" class="pull-right">
          <input class="input-small" type="text" placeholder="Username">
          <input class="input-small" type="password" placeholder="Password">
          <button class="btn" type="submit">Sign in</button>
        </form>
        -->
      </div>
    </div>
  </div>

  <div class="container-fluid">
   <div class="row-fluid">
    {% block container %}
    <div class="span3">
     <div class="well">
      {% block sidebar %}
        <h1 class="datatables-filter">Filter by</h1>
        {{ form|safe }}
      {% endblock  %}
     </div>
    </div>

    <div class="span9">
      {% block content %}
      {% endblock  %}
    </div>

    {% endblock container %}
   </div>
   <hr />
    <footer>
      <p>&copy; Domen Ko≈æar 2011-2012</p>
    </footer>
  </div>
</body>
</html>
