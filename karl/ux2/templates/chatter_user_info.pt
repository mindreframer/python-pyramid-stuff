<div id="chatter-user-info" class="portlet">
  <div class="user-avatar">
    <img class="avatar" alt="${creator}" width="40"
          src="${creator_image_url}" />
  </div>
  <div class="user-info">
    <a href="${creator_url}">
      <strong>${creator}</strong>
    </a>
    <a class="profile-link" href="${creator_profile_url}">
      View user profile
    </a>
  </div>
  <div class="user-stats">
    <ul>
      <li>
        <a href="${creator_url}">
          <strong>${posts}</strong> posts
        </a>
      </li>
      <li>
        <a href="${chatter_url}${creator_userid}/following.html">
          <strong>${following}</strong> following
        </a>
      </li>
      <li>
        <a href="${chatter_url}${creator_userid}/followers.html">
          <strong>${followers}</strong> followers
        </a>
      </li>
    </ul>
  </div>
</div>
