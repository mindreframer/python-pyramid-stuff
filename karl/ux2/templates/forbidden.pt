<div xmlns="http://www.w3.org/1999/xhtml" 
     xmlns:tal="http://xml.zope.org/namespaces/tal"
     xmlns:metal="http://xml.zope.org/namespaces/metal" 
     metal:use-macro="main_template">

  <div class="anonymous-form" metal:fill-slot="content">

    <header>
      ${panel('global_logo_header')}
      ${panel('status_message')}
    </header>

    <div class="anonymous-content warning">
      <h1>Forbidden</h1>
      <p>The set of credentials you possess does not allow you to view this
      resource.  If you'd like to log in as a different user, please
      visit the <a href="${login_form_url}">login form</a>.  Otherwise,
      you may visit the <a href="${homepage_url}">home page</a>.</p>
    </div>

  </div>

</div>
